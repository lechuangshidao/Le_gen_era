<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopping_dialog_shape">

    <ImageView
        android:id="@+id/image_fujin_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_15"
        android:src="@mipmap/image_dialog_itme" />

    <TextView
        android:id="@+id/text_fujin_name"
        android:layout_width="285dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_fujin_back"
        android:background="#F3F3F3"
        android:text="@string/fujin_name" />

    <Button
        android:id="@+id/button_dialog_send"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@id/text_fujin_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circle_orange_5"
        android:text="发送"
        android:layout_marginTop="@dimen/margin_20"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>
