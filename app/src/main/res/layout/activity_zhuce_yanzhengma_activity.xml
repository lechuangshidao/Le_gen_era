<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".Activity.Recommend_YanZhengMa_Activity">
    <include layout="@layout/view_simple_topbar"></include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="14dp"
        android:text="返回"
        android:textColor="#FFBD11"
        android:textSize="16sp" />
    <TextView
        android:text="请填写短信验证码"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/linear_callphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_marginTop="185dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/text_callphone_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_86"
            android:textSize="@dimen/textsize_20"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="+86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_callphone_note"
            android:textCursorDrawable="@null"
            android:digits="@string/number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/linear_address"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="输入手机号码"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_below="@id/linear_callphone"
        android:background="#E6E6E6"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:id="@+id/linear_yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_callphone"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_password_note"
            android:digits="@string/number"
            android:textCursorDrawable="@null"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/linear_call_log"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_below="@id/linear_yanzhengma"
        android:background="#E6E6E6"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <Button
        android:id="@+id/button_next_tijiao"
        android:text="提交"
        android:textSize="18sp"
        android:layout_below="@id/linear_yanzhengma"
        android:textColor="@color/white"
        android:background="@drawable/shape_circle_orange_5"
        android:layout_width="320dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_height="45dp" />
    <TextView
        android:id="@+id/text_mob_time"
        android:textSize="15dp"
        android:layout_below="@id/button_next_tijiao"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="接收短信大约需要60秒"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
