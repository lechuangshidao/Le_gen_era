<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".Activity.Add_Information">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/view_simple_topbar"></include>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginTop="14dp"
            android:text="返回"
            android:textColor="#FFBD11"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_wu_gerentouxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@mipmap/image_wu_gerentouxiang" />

    <TextView
        android:id="@+id/text_touxiang_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="个人头像" />

    <LinearLayout
        android:id="@+id/linear_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/text_callphone_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_add_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_below="@id/linear_address"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_weight="1"
            android:background="@null"
            android:hint="例如：张三"
            android:textCursorDrawable="@null"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（还可以输入6个字）"
            android:textColor="#FFBD11" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear_add_name"
        android:layout_marginLeft="22dp"
        android:background="#E6E6E6"></View>

    <LinearLayout
        android:id="@+id/linear_add_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/text_age_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_age_date"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_below="@id/linear_address"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="@dimen/margin_20"
            android:gravity="center_vertical"
            android:hint="请选择生日"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear_add_age"
        android:layout_marginLeft="22dp"
        android:background="#E6E6E6"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_man" />

        <ImageView
            android:id="@+id/image_womanman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/image_woman" />
    </LinearLayout>

    <TextView
        android:id="@+id/Text_next_add"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circle_orange_5"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>
