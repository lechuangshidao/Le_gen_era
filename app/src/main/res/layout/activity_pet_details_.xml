<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Lechuang.app.Activity.Pet_details_Activity">
    <include layout="@layout/view_simple_topbar"></include>
    <ImageView
        android:id="@+id/image_pet_details"
        android:src="@mipmap/image_pet_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_pet_details_name"
        android:text="宠物信息"
        android:layout_below="@id/image_pet_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_15"
        android:textSize="@dimen/textsize_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@id/text_pet_details_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_50"
            android:id="@+id/linear_label"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="标签："
                android:textSize="@dimen/textsize_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_pet_details_label"
                android:text="活泼、好吃懒做"
                android:textColor="#474747"
                android:textSize="@dimen/textsize_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:id="@+id/linear_date"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="出生日期："
            android:textSize="@dimen/textsize_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_pet_details_date"
            android:text="2017.01.20"
            android:textColor="#474747"
            android:textSize="@dimen/textsize_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear_date"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="@dimen/margin_10"
        android:id="@+id/linear_blood_lineage"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="血统："
            android:textSize="@dimen/textsize_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_pet_details_blood_lineage"
            android:text="波斯猫"
            android:textColor="#474747"
            android:textSize="@dimen/textsize_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_below="@id/linear_blood_lineage"
        android:id="@+id/text_pet_greet"
        android:text="打招呼"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/textsize_20"
        android:textColor="@color/white"
        android:background="@drawable/shape_circle_orange_5"
        android:layout_width="300dp"
        android:layout_height="45dp"/>
</RelativeLayout>
