<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="253dip"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="5dip"
    android:paddingTop="29dip" >

    <android.support.v4.view.ViewPager
        android:id="@+id/child_pager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <com.yonyou.sns.im.ui.emoji.pagerindicator.CirclePageIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="9dip"
        app:custombackground="@android:color/white" />

</LinearLayout>