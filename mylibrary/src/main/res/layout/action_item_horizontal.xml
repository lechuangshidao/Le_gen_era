<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/popup_horzontal_item_height"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:minWidth="60.0dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/popup_horzontal_item_text_margin_bottom"
        android:paddingLeft="@dimen/popup_horzontal_item_padding_left"
        android:paddingRight="@dimen/popup_horzontal_item_padding_left"
        android:paddingTop="@dimen/popup_horzontal_item_icon_margin_top" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/popup_horzontal_item_icon_height"
            android:layout_height="@dimen/popup_horzontal_item_icon_height"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/friend_rename" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chart"
            android:textColor="@color/red"
            android:textSize="@dimen/popup_horzontal_item_text" />
    </LinearLayout>

</LinearLayout>